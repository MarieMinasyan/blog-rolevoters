{% extends '::base.html.twig' %}

{% block body -%}

    <a href="{{ path('user') }}"><< Back to the list</a>

    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Username</th>
                <td>{{ entity.username }}</td>
            </tr>
        </tbody>
    </table>

    {% if is_granted('ROLE_ADMIN') %}
        <a class="btn btn-primary" href="{{ path('user_edit', { 'id': entity.id }) }}">Edit</a>
        <a class="btn btn-danger" href="{{ path('user_delete', { 'id': entity.id }) }}">Delete user</a>
    {% endif %}

{% endblock %}
